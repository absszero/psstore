{
    "name": "absszero/psstore",
    "description": "Track and notify price from PS Store",
    "type": "project",
    "require": {
        "symfony/console": "^3.4",
        "vlucas/phpdotenv": "^2.5",
        "guzzlehttp/guzzle": "^6.3",
        "swiftmailer/swiftmailer": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "3.*"
    },
    "authors": [
        {
            "name": "absszero",
            "email": "absszero@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Absszero\\PSStore\\": "src/"
        },
        "files": [
            "helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "bin": [
        "psstore"
    ],
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
